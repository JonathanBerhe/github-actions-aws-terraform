[
    {
      "name": "web",
      "image": "${image}",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "memory": 300,
      "networkMode": "awsvpc",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "web"
        }
      },
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "${database_url}"
        },
        {
          "name": "PORT",
          "value": "80"
        }
      ]
    }
  ]